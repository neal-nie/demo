{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "args": [
                    "/d",
                    "/c"
                ],
                "executable": "C:\\Windows\\System32\\cmd.exe"
            }
        }
    },
    "tasks": [
        {
            "label": "Build-CPP",
            "detail": "Build current file with MinGW Cpp",
            "type": "shell",
            "command": "D:\\MinGW\\bin\\mingw32-c++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        },
        {
            "label": "Build-CPP-Lib",
            "detail": "Build current file with MinGW Cpp including lib folder",
            "type": "shell",
            "command": "D:\\MinGW\\bin\\mingw32-c++.exe",
            "args": [
                "-Ilib", // include header file lib dir
                "-g", // generate exe support gdb for debug
                "${file}",
                "lib\\*.c", // compile source file in lib dir
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        },
        {
            "label": "Run-Exe",
            "detail": "Run exe of current file",
            "type": "shell",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Build-CPP&Run",
            "detail": "Build current file with MinGW Cpp and then run exe",
            "type": "shell",
            "dependsOn": [
                "Build-CPP",
                "Run-Exe",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build-CPP-Lib&Run",
            "detail": "Build current file with MinGW Cpp including lib folder and then run exe",
            "type": "shell",
            "dependsOn": [
                "Build-CPP-Lib",
                "Run-Exe",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Run-Bat",
            "detail": "Run current bat file",
            "type": "shell",
            "command": "${file}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Clear",
            "detail": "Delete all exe files, forced, sub-folder search and quiet.",
            "type": "shell",
            "command": "del",
            "args": [
                "/f",
                "/s",
                "/q",
                "*.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher": []
        }
    ]
}